{%- block form_widget -%}
  {% if attr is defined and attr is not empty %}
    {% set attr.class = type|default('input') %}
  {% else %}
    {% set attr = {"class": type|default('input')} %}
  {% endif %}

  {% if compound %}
    {{- block('form_widget_compound') -}}
  {% else %}
    {{- block('form_widget_simple') -}}
  {% endif %}
{%- endblock form_widget -%}
