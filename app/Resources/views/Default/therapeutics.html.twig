{% extends 'base.html.twig' %}

{% block scripts %}
  {{ parent() }}

  <script>
    $(function() {
      addCheckboxListener();
    });
  </script>
{% endblock %}

{% block body %}
  <div class="column is-full">
    <h1 class="title">Therapeutics - Day {{ app.user.getDays()|length }}</h1>

    <div class="tile box">
      <div class="content">
        <p>Select therapeutic procedures from the list below. <b>Once you submit this page, you cannot come back to change your selections!</b></p>
      </div>
    </div>
  </div>

  <div class="column">
  	{{ form_start(form) }}
  	{{ form_widget(form) }}
  	{{ form_end(form) }}
  </div>

  <div class="tile box" style="position: fixed; bottom: 40px; right: 10px">
    <b>Total cost: $<span id="cost">0</span></b>
  </div>
{% endblock %}

{% block footer %}
	{% if app.user.location == "Hospital" %}
		<a href="{{ path('review') }}">Review</a>
	{% endif %}

	{{ parent() }}
{% endblock %}
