{% extends 'base.html.twig' %}

{% block header %}
	{% for flash in app.session.flashBag.get('notice') %}
		<div class="flash-notice">{{ flash }}</div>
	{% endfor %}
	{% for flash in app.session.flashBag.get('error') %}
		<div class="flash-error">{{ flash }}</div>
	{% endfor %}

	{{ parent() }}
{% endblock %}

{% block body %}
	{{ form_start(form) }}
	{{ form_widget(form) }}
	{{ form_end(form) }}
{% endblock %}
