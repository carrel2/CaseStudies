{#
	Base template

	Blocks:
		- stylesheets
		- scripts
		- header
		- flashes
		- body
		- footer

	Variables:
		- app: Symfony\Bridge\Twig\AppVariable
			- user: AppBundle\Entity\User
			- request: Symfony\Component\HttpFoundation\Request
			- session: Symfony\Component\HttpFoundation\Session\Session
			- environment: string
			- debug: boolean
#}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		{% block stylesheets %}
			<link href="{{ asset('css/reset.css') }}" rel="stylesheet" />
			<link href="{{ asset('css/styles.css') }}" rel="stylesheet" />
			<link href="{{ asset('css/tooltipster/tooltipster.bundle.min.css') }}" rel="stylesheet" />
			<link href="{{ asset('css/tooltipster/tooltipster-sideTip-borderless.min.css') }}" rel="stylesheet" />
		{% endblock %}
		{% block scripts %}
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
			<script src="{{ asset('js/tooltipster.bundle.min.js') }}"></script>
			<script src="{{ asset('bundles/ivoryckeditor/ckeditor.js') }}"></script>
			<script src="{{ asset('js/scripts.js') }}"></script>
		{% endblock %}
	</head>
	<body>
		<div id="header">
			{% block header %}
				<ul>
					<li><a href="{{ path('default') }}">Home</a></li>
					<li><a href="{{ path('user') }}">Account</a></li>

					{% if app.user.hasResults %}
						<li><a href="{{ path('results') }}">My results</a></li>
					{% endif %}

					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<li class="right"><a href="{{ path('logout') }}">Logout</a></li>
					{% endif %}

					{% if is_granted('ROLE_SUPER_ADMIN') %}
						<li class="right"><a href="{{ path('development') }}">Development</a></li>
					{% endif %}

					{% if is_granted('ROLE_ADMIN') %}
						<li class="admin-dropdown right">
							<a href="{{ path('admin') }}">Admin</a>

							<div class="admin-menu">
								<a href="{{ path('manageUsers') }}">Manage users</a>
								<a href="{{ path('manageAnimals') }}">Manage animals</a>
								<a href="{{ path('editCase') }}">Edit cases</a>
								<a href="{{ path('manageTests') }}">Manage tests</a>
								<a href="{{ path('manageMedications') }}">Manage medications</a>
								<a href="{{ path('import') }}">Import</a>
							</div>
						</li>
					{% endif %}
				</ul>
			{% endblock %}
		</div>

		<div id="flashes">
			{% block flashes %}
				{% for flash in app.session.flashBag.get('success') %}
					<div class="flash flash-success">{{ flash }}</div>
				{% endfor %}
				{% for flash in app.session.flashBag.get('warning') %}
				  <div class="flash flash-warning">{{ flash }}</div>
				{% endfor %}
				{% for flash in app.session.flashBag.get('error') %}
					<div class="flash flash-error">{{ flash }}</div>
				{% endfor %}
			{% endblock %}
		</div>

		<div id="body">
			{% block body %}{% endblock %}
		</div>

		<div id="footer">
			{% block footer %}
			{% endblock %}
		</div>
	</body>
</html>
