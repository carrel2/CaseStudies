{% extends 'base.html.twig' %}

{% block scripts %}
	{{ parent() }}

	<script src="{{ asset('js/admin.js') }}"></script>
{% endblock %}

{% block body %}
	{{ form_start(form) }}
		{{ form_label(form.case) }}
		{{ form_errors(form.case) }}
		{{ form_widget(form.case, {'attr': {'onchange': 'updateAdminCase()'}} ) }}

		{{ form_rest(form) }}

	{{ form_end(form) }}

	<div id="caseInfo"></div>
{% endblock %}

{% block footer %}
	{{ parent() }}

	<script>updateAdminCase()</script>
{% endblock %}
