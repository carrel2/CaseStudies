{% extends 'base.html.twig' %}

{% block scripts %}
	{{ parent() }}

	<script>
		$(function(){
			updateAdminCase();
		});
	</script>
{% endblock %}

{% block body %}
	{{ form_start(form) }}
		{{ form_label(form.case) }}
		{{ form_errors(form.case) }}
		{{ form_widget(form.case, {'attr': {'onchange': 'updateAdminCase()'}} ) }}

		{{ form_rest(form) }}

	{{ form_end(form) }}

	<div id="caseInfo"></div>
{% endblock %}
