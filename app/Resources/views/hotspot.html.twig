{# app/Resources/views/hotspot.html.twig #}
{% extends 'base.html.twig' %}

{% block scripts %}
	{{ parent() }}

	<script>
		$(function() {
			updateHotspots();
		});
	</script>
{% endblock %}

{% block body %}
	<div id="hotspots">

	{% for spot in hotspots %}
		<span class="hotspot" data-path="{{ spot.id }}">{{ spot.name }}</span>
	{% endfor %}

	</div>

	<div id="checked">
	{% for spot in checked %}
		<li>{{ spot.name }}: {{ spot.info }}</li>
	{% endfor %}
	</div>
{% endblock %}

{% block footer %}
	<a href="{{ path('order_tests') }}">Continue</a>
	<a href="{{ path('review') }}">Review</a>

	{{ parent() }}
{% endblock %}
