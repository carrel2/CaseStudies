{#
	Base template

	Blocks:
		- stylesheets
		- scripts
		- header
		- flashes
		- body
		- footer

	Variables:
		- app: Symfony\Bridge\Twig\AppVariable
			- user: AppBundle\Entity\User
			- request: Symfony\Component\HttpFoundation\Request
			- session: Symfony\Component\HttpFoundation\Session\Session
			- environment: string
			- debug: boolean
#}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />
		{% block stylesheets %}
			<link href="{{ asset('css/bulma.css')}}" rel="stylesheet" />
			<link href="{{ asset('css/tooltipster/tooltipster.bundle.min.css') }}" rel="stylesheet" />
			<link href="{{ asset('css/tooltipster/tooltipster-sideTip-borderless.min.css') }}" rel="stylesheet" />
		{% endblock %}
		{% block scripts %}
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
			<script src="{{ asset('js/tooltipster.bundle.min.js') }}"></script>
			<script src="{{ asset('bundles/ivoryckeditor/ckeditor.js') }}"></script>
			<script src="{{ asset('js/scripts.js') }}"></script>
		{% endblock %}
	</head>
	<body>
		<div class="columns">
			{% block flashes %}
				{% for flash in app.session.flashBag.get('success') %}
					<div class="notification is-success">{{ flash }}</div>
				{% endfor %}
				{% for flash in app.session.flashBag.get('warning') %}
				  <div class="notification is-warning">{{ flash }}</div>
				{% endfor %}
				{% for flash in app.session.flashBag.get('error') %}
					<div class="notification is-danger">{{ flash }}</div>
				{% endfor %}
			{% endblock %}
		</div>

		<div class="columns">
			<div class="column is-one-quarter">
				{% block header %}
					<p class="menu-label">Menu</p>

					<ul class="menu-list">
						<li><a href="{{ path('default') }}">Home</a></li>
						<li><a href="{{ path('user') }}">Account</a></li>

						{% if app.user.hasResults %}
							<li><a href="{{ path('results') }}">My results</a></li>
						{% endif %}

						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<li><a href="{{ path('logout') }}">Logout</a></li>
						{% endif %}
					</ul>

					{% if is_granted('ROLE_ADMIN') %}
						<p class="menu-label">Admin</p>

						<ul class="menu-list">
							<li><a href="{{ path('manageUsers') }}">Manage users</a></li>
							<li><a href="{{ path('manageAnimals') }}">Manage animals</a></li>
							<li><a href="{{ path('editCase') }}">Edit cases</a></li>
							<li><a href="{{ path('manageTests') }}">Manage tests</a></li>
							<li><a href="{{ path('manageMedications') }}">Manage medications</a></li>
							<li><a href="{{ path('import') }}">Import</a></li>
						</ul>
					{% endif %}

					{% if is_granted('ROLE_SUPER_ADMIN') %}
						<p class="menu-label">Devel</p>

						<ul class="menu-list">
							<li><a href="{{ path('development') }}">Run commands</a></li>
						</ul>
					{% endif %}
				{% endblock %}
			</div>

			<div class="column">
				{% block body %}{% endblock %}
			</div>
		</div>

		<footer class="footer">
			{% block footer %}{% endblock %}
		</footer>
	</body>
</html>
